    <color name="app_divider_inverse">#1fffffff</color> <!-- white 12% -->

    <!-- App Icon Colors (Dark icons) -->
    <color name="app_active_icon">#8a000000</color> <!-- black 54% -->
    <color name="app_inactive_icon">#61000000</color> <!-- black 38 % -->

    <!-- App Icon Colors (Light icons) -->
    <color name="app_active_icon_inverse">#ffffffff</color> <!-- white 100% -->
