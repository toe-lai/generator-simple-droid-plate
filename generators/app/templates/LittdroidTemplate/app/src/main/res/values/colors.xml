<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="theme_primary">@color/app_blue_grey</color>
    <color name="theme_primary_dark">@color/app_dark_blue_grey</color>
    <color name="theme_accent">@color/app_red</color>
    <color name="theme_accent_dark">@color/app_dark_red</color>

    <!-- App Color Palette -->
    <color name="app_blue_grey">@color/md_blue_grey_500</color>
    <color name="app_dark_blue_grey">@color/md_blue_grey_700</color>
    <color name="app_light_blue_grey">@color/md_blue_grey_300</color>
    <color name="app_red">@color/md_red_a200</color>
    <color name="app_dark_red">@color/md_red_a400</color>
    <color name="app_light_red">@color/md_red_a100</color>
    <color name="app_black">@color/md_black</color>
    <color name="app_white">@color/md_white</color>

    <!-- App Primary Text Colors (Dark text). -->
    <color name="app_transparent">#00000000</color>
    <color name="app_error">#ffdd2c00</color>
    <color name="app_primary_text">#de000000</color> <!-- black 87% -->
    <color name="app_secondary_text">#8a000000</color> <!-- black 54% -->
    <color name="app_disabled_text">#61000000</color> <!-- black 38% -->
