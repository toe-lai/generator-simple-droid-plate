<resources>

    <!-- Exists for inheritance purposes -->
    <style name="LittdroidTemplate" parent="LittdroidTemplate.Base" />

    <style name="LittdroidTemplate.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="LittdroidTemplate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="LittdroidTemplate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Activity styles -->
    <style name="LittdroidTemplate.Template"/>

    <!-- Button styles -->
    <style name="Widget.LittdroidTemplate.Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

</resources>
